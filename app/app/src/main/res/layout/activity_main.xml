<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="15dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/reporting_status"
            android:background="@color/colorWhite"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/tick_mark"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crime Reported Successfully"
                android:textSize="17sp"
                android:padding="6dp"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/reporting_status"
            android:id="@+id/report_crime"
            android:onClick="onClick"
            style="@style/Base.CardView"
            android:elevation="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="375dp"
                    android:layout_height="145dp"
                    android:src="@drawable/report"
                    android:alpha="0.4"
                    android:id="@+id/img_speak"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REPORT YOUR CRIME"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="30dp"
                    android:textColor="@color/colorPrimary"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/report_crime"
            style="@style/Base.CardView"
            android:id="@+id/crimes_reported"
            android:onClick="onClick"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="148dp"
                    android:src="@drawable/img_reports_bg"
                    android:id="@+id/img_reports"
                    android:alpha="0.4"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CRIME REPORTS"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentBottom="true"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/crimes_reported"
            android:id="@+id/solved_crime"
            android:onClick="onClick"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="9dp"
                >
                <ImageView
                    android:layout_width="370dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_solved"
                    android:id="@+id/img_solved"
                    android:layout_centerHorizontal="true"
                    android:alpha="0.4"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="SOLVED CRIMES"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:paddingBottom="30dp"
                    android:textColor="@color/colorPrimary"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
