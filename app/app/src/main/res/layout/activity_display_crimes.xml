<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_bg"
    tools:context="com.example.jaisa.smarttraumareliever_flawsome.DisplayCrimesActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Pending reports"
        android:textColor="#1c4d08"
        android:id="@+id/sample_text"
        android:textSize="20sp"
        android:padding="15dp"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crimes_reported_view"
        android:layout_below="@id/sample_text"
        android:padding="15dp"
        >
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
